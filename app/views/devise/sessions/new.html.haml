= render 'shared/sub-header'
%main.single-main
  .login-panel
    .login-no-account
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", form_path(resource_name)
    .login-form-inner
      %button#facebook-login.line.btn-sns-facebook
        %i.icon-facebook
        %i.fab.fa-facebook-square
        = link_to " Facebookでログイン", "/users/auth/facebook"
      %button#google-login.line.btn-sns-google
        %i.fab.fa-google
        = link_to " Googleでログイン", "/users/auth/google_oauth2" 
    %form{action: "https://www.mercari.com/jp/login/", method: "POST", novalidate: "novalidate"}
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .login-form-inner
        .form-group
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .form-group
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
        %button.login-submit.line.btn-red{type: "submit"} ログイン
        %input{name: "login_callback", type: "hidden", value: "https://www.mercari.com/jp/"}/
        = link_to("パスワードをお忘れの方","https://www.mercari.com/jp/password/reset/start/")

= render 'shared/sub-footer'

