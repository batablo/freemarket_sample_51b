= render 'shared/sub-header'
%main.single-main
  %section.l-single-container
    %h2.l-single-head 新規会員登録
    .l-single-inner
      .l-single-content
        .btn-default.btn-mail
          %i.icon-mail
          %i.fa.fa-envelope
          = link_to "メールアドレスで登録", new_user_registration_path
        %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
          %i.icon-facebook
          %i.fab.fa-facebook-square
          = link_to " Facebookで登録", "/users/auth/facebook"
        %button#google-login.btn-default.btn-sns.btn-sns-google
          %i.fab.fa-google
          = link_to " Googleで登録", "/users/auth/google_oauth2"
= render 'shared/sub-footer'