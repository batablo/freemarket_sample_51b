= render 'shared/sub-header'
%main.single-main
  .login-panel
    .login-no-account
      %p アカウントをお持ちでない方はこちら
      = link_to("新規会員登録","https://www.mercari.com/jp/signup/?after_save_callback=https%3A%2F%2Fwww.mercari.com%2Fjp%2F")
    .login-form-inner
      %button#facebook-login.line.btn-sns-facebook
        %i.icon-facebook
        %i.fab.fa-facebook-square
        Facebookでログイン
      %button#google-login.line.btn-sns-google
        %i.fab.fa-google
        Googleでログイン
    %form{action: "https://www.mercari.com/jp/login/", method: "POST", novalidate: "novalidate"}
      .login-form-inner
        .form-group
          %input.login-input-text.line{name: "email", placeholder: "メールアドレス", type: "email", value: ""}/
        .form-group
          %input.login-input-text.line{name: "password", placeholder: "パスワード", type: "password"}/
        %button.login-submit.line.btn-red{type: "submit"} ログイン
        %input{name: "login_callback", type: "hidden", value: "https://www.mercari.com/jp/"}/
        = link_to("パスワードをお忘れの方","https://www.mercari.com/jp/password/reset/start/")
= render 'shared/sub-footer'